@model Aluno

@{
    ViewData["Title"] = "Cadastrar aluno";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de alunos</h1>
    </div>

    <form asp-controller="Aluno" asp-action="InserirAluno" method="post">

        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Insira o nome do aluno">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Matricula</label>
            <input type="text" asp-for="Matricula" class="form-control" placeholder="Insira a matricula do aluno">
         </div>

        <div class="mb-3">
            <label class="form-label">Cpf</label>
            <input type="text" asp-for="Cpf" class="form-control" placeholder="Insira o CPF do aluno">
            <span class="text-danger" asp-validation-for="Cpf"></span>
        </div>


        <div class="d-flex gap-5 mt-5">
            @*Botão Cadastrar*@
			<button type="submit" class="btn btn-primary w-50">Cadastrar</button>
			@*Botão Voltar*@
			<a class="btn btn-primary w-50" asp-controller="Aluno" asp-action="Index">Voltar</a>
        </div>

    </form>

</div>