@model Professor

@{
    ViewData["Title"] = "Editar professor";
}


<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Edição de professores</h1>
    </div>

    <form asp-controller="Professor" asp-action="EditarProfessor" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label for="Nome" class="form-label text-light">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do professor">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-3">
            <label for="Disciplina" class="form-label text-light">Disciplina</label>
            <input type="text" asp-for="Disciplina" class="form-control" placeholder="Disciplina do professor">
        </div>

        <div class="mb-3">
            <label for="Cpf" class="form-label text-light">Cpf</label>
            <input type="text" asp-for="Cpf" class="form-control" placeholder="CPF do professor">
            <span class="text-danger" asp-validation-for="Cpf"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            @*Botão Editar*@
            <button type="submit" class="btn btn-primary w-50">Editar</button>
            @*Botão Voltar*@
            <a class="btn btn-primary w-50" asp-controller="Professor" asp-action="Index">Voltar</a>
        </div>

    </form>

</div>