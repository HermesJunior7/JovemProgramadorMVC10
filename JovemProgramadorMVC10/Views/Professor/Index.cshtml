@model List<Professor>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Professores</h1>
        <a class="btn btn-primary mx-2" type="button" asp-controller="Professor" asp-action="AdicionarProfessor">Cadastrar novo professor</a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Disciplina</th>
                <th scope="col">Nome</th>
                <th scope="col">Cpf</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Professor professor in Model)
                {
                    <tr>
                        <td>@professor.Disciplina </td>
                        <td>@professor.Nome </td>
                        <td>@professor.Cpf </td>
                        <td>
                            <a type="submit" class="btn btn-warning mx-2" role="button" asp-controller="Professor" asp-action="Editar" asp-route-id="@professor.Id"><i class="bi bi-pen mx-2"></i>Editar</a>
                            <a type="submit" class="btn btn-danger mx-2" role="button" asp-controller="Professor" asp-action="ExcluirProfessor" asp-route-id="@professor.Id"><i class="bi bi-trash3 mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>